<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GitSave.MainWindow"
        Title="GitSave">

    <Grid ColumnDefinitions="200, *" RowDefinitions="*, Auto" Margin="4" ShowGridLines="False">
        
        <!-- коммиты -->
        <DataGrid Items="{Binding Commits}" Margin="0,0,0,4" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UUID" 
                                    Binding="{Binding UUID}" 
                                    Width="*" />
                <DataGridTextColumn Header="Created" 
                                    Binding="{Binding Created}" 
                                    Width="*" />
                <DataGridTextColumn Header="Comment" 
                                    Binding="{Binding Comment}" 
                                    Width="5*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- управляющие кнопки -->
        <StackPanel Orientation="Vertical" Spacing="5" Grid.Row="1" Grid.Column="0">
            <Button HorizontalAlignment="Stretch" Content="Save (ctrl+S)" />
            <Button HorizontalAlignment="Stretch" Content="Update (ctrl+U)" />
            <Button HorizontalAlignment="Stretch" Content="Load (ctrl+L)" />
        </StackPanel>

        <!-- комментарий к коммиту -->
        <TextBox Text="Comment" Margin="4,0,0,0" Height="200" AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1"/>

    </Grid>

</Window>
